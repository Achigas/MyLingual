<article class="post">
  <div class="title">
    <a class= "maintitle" href="{{post_url}}" target="_blank">{{title}}</a>
  </div>
  <div class="meta">
      <small>Posted by {{user.username}} on {{format_date created_at}}
    ||
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </small>
  </div>
  <div class="posttext">
    <i>{{post}}</i>
  </div>
</article>

