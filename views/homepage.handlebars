  <section class="py-5">
    <div class="container row justify-content-center">
      <h1>Let's learn together!</h1>
      <p class="lead">The place for people learning the same language to meet and share. All levels welcome!</p>
    </div>
  </section> 
    
    
<div class="row justify-content-center">
    <div class="card" style="width: 55rem;">
        <h5 class="card-header">See what everyone is sharing!</h5>
        <div class="card-body">
          <ol class="post-list">
            <p>Hello{{languageid}}</p>
            {{#each posts as |post|}}
            {{#if (isCurrentLanguage ../languageid user.language_id)}}
            <li>
              {{> post-info post }}
            </li>
           {{/if}}
            {{/each}}
          </ol>

      </div>
    </div>
  </div>

