<div>
  <h1>Your Dashboard</h1>
 </div> 

<section>
 <div>
     <h3>Upload Photo</h3>
 </div>
 <form class="student-info-form">
    <div>
      <label for="primary-language"><strong>Primary Language:</strong></label>
      <input type="text" name="primary-language" id="primary-language">
    </div>
    <div>
      <label for="learning-language"><strong>Learning Language:</strong></label>
       <input type="text" name="learning-language" id="learning-language">
    </div>
     <div class='form-field'>
      <label for='levelFilter'><strong>Level:</strong> </label>
      <select id='levelFilter' class='form-control'>
        <option>Choose one.</option>
        <option value="Beginner">Beginner</option>
        <option value="Intermediate">Intermediate</option>
        <option value="Advanced">Advanced</option>
      </select>
    </div>
 </form>
</section>

<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title"><strong>Title:</strong></label>
      <input type="text" id="post-title" name="post-title" />
    </div>
     <div>
      <label for="post-url"><strong>Link:</strong></label>
      <input name="post-url" type="text" value="{{post.post_url}}" />
    </div>
    <div>
      <label for="post"><strong>Content:</strong></label>
      <textarea id="post" name="post"></textarea>
    </div>
    <div class='form-field'>
      <label for='languageFilter'>Category:</label>
      <select id='languageFilter' class='form-control'>
        <option>Choose one.</option>
        {{#each category_name}}
        <option value="{{this}}">{{this.category_name}}</option>
        {{/each}}
      </select>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
     <strong> <a href="/post/{{id}}" target="_blank">{{title}}</a> </strong><a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
