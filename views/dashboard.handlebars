<div class="row justify-content-center">
    <div class="card" style="width: 45rem;">
        <h5 class="card-header">Create New Post</h5>
        <div class="card-body">
      
            <form class="new-post-form">
        
            <div class="form-group">
                <label for="post-title"><strong>Title:</strong></label>
                <input type="text" class="form-control" id="post-title" placeholder="Enter Title">
            </div>

            <div class="form-group">
                <label for="post-url"><strong>Link:</strong></label>
                <input name="post-url" class="form-control" id="post-url" placeholder="Enter URL">
            </div>

            <div class="form-group">
                <label for="post"><strong>Content:</strong></label>
                <input id="post" class="form-control" name="post" placeholder="Enter text here">
            </div>

            <div class='form-field'>
                <label for='categoryFilter'><strong>Category:</strong> </label>
                <select id='categoryFilter' class='form-control'>
                <option>Choose one.</option>
                <option value="Music">Music</option>
                <option value="Literature">Literature</option>
                <option value="Video">Video</option>
                </select>
            </div>
            
            <br>

            <div class="form-group container">
                <div class="text-center">
                    <button type="submit" class="row btn btn-primary btn-warning ">Create Post</button>
                </div>
            </div>

            </form>
        </div>
    </div>
</div>

